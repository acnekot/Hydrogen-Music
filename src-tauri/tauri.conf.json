{
  "$schema": "https://schema.tauri.app/config/2",
  "build": {
    "beforeDevCommand": "npm run web:dev",
    "beforeBuildCommand": "npm run web:build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Hydrogen Music",
    "version": "0.5.6"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "identifier": "com.hydrogenmusic.app",
      "icon": []
    },
    "windows": [
      {
        "label": "main",
        "title": "Hydrogen Music",
        "width": 1024,
        "height": 672,
        "minWidth": 1024,
        "minHeight": 672,
        "resizable": true,
        "decorations": false
      }
    ]
  }
}
